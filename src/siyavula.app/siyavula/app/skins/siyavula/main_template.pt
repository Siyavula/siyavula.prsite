<tal:master metal:define-macro="master">
<html lang="en" tal:define="navroot context/@@plone_portal_state/navigation_root_url;
                            helpers nocall:context/@@main-template-helpers;">
    <head>
        <meta http-equiv="Content-Type" content="text/html;charset=utf-8" />
        <title>Siyavula</title>
        <link rel="stylesheet" type="text/css" media="screen, projection"
              href="#"
              tal:attributes="href string:${navroot}/++resource++siyavula.app/main.css">
    </head>
    <body>
        <div class="wrapper">
            <div class="container">
                <div class="header">
                    <div class="logo">
                        <a href="#"><img src="" tal:attributes="src string:${navroot}/++resource++siyavula.app/siyavula_logo.png" /></a>
                    </div>
                    <div class="shuttleworth_logo">
                        <a href="#"><img src="" tal:attributes="src string:${navroot}/++resource++siyavula.app/shuttleworth_foundation_logo.png" /></a>
                    </div>
                </div>
                <div class="menubar">
                    <a tal:attributes="href string:${navroot}">
                        Home
                    </a>
                <tal:sections tal:repeat="section helpers/sections">
                    |
                    <a tal:attributes="href section/absolute_url">
                        <span tal:replace="section/Title" />
                    </a>
                </tal:sections>
                </div>
                <metal:siyavula_banner define-slot="siyavula_banner">
                </metal:siyavula_banner>
                <div class="section">
                <metal:siyavula_heading define-slot="siyavula_heading">
                </metal:siyavula_heading>
                </div>
                <div class="content">
                <tal:main metal:define-slot="siyavula_content">
                </tal:main>
                </div>
                <div class="footer">
                    <div class="footer_wrapper">
                        <div class="footer_book" tal:repeat="book helpers/books">
                                <img tal:define="scale book/@@images" tal:replace="structure python: scale.scale('cover', width=100, height=100, direction='up').tag()" />
                        </div>
                        <div class="footer_blurb">
                        </div>
                    </div>
                    <div class="colophon">
                        <a href="http://creativecommons.org/licenses/by/3.0/"><img src="" tal:attributes="src string:${navroot}/++resource++siyavula.app/cc_88x31.png"></a> This site and its content is licensed under the cc-BY creative commons license.
                    </div>
                </div>
            </div>
        </div>
    </body>
</html>
</tal:master>

